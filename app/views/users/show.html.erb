  <div class="dashboard-events">
      <% @mypublicevents.each do |event| %>
        <%= render "events/event_card", event: event %>
      <% end %>
    <% else %>
      <p>No attending events ðŸ˜”</p>
    <% end %>
  </div>
</div>
