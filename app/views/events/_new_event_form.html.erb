  <%= simple_form_for [place, event] do |f| %>

    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= f.input :category, collection: ["birthday", "picnic", "social", "playdate", "other"] %>
    <div class="row">
      <div class="col-6">
        <%= f.input :start_time, as: :string, input_html: {data: {controller: "flatpickr"}} %>
      </div>
      <div class="col-6">
        <%= f.input :end_time, as: :string, input_html: {data: {controller: "flatpickr"}} %>
      </div>
    </div>
    <%= f.input :public, as: :boolean, label: "Make event public?" %>
    <%= f.button :submit, "Create event" %>
  <% end %>
