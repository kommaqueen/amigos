<div class="logo-banner">
  <%= image_tag "staggered_logo" %>
  <div class="logo-tagline">
    <h2>A place to play wherever you go!</h2>
  </div>
</div>

<div class="search-box bottom-space big">
  <div class="search-input">
    <p class="input-text":>Find a place near you...</p>
  </div>
  <div class="search-icon">
    <i class="fa-solid fa-magnifying-glass"></i>
  </div>
</div>

<div class="categories bottom-space big">
  <h2 class="header big text-center">Browse Categories</h2>
  <div class="button-box bottom-space upper-gap">
    <button class="button-basic-blue">
      <span class="front-blue">
        Newest
      </span>
    </button>
    <button class="button-basic-yellow">
      <span class="front-yellow">
        Popular</span>
    </button>
    <button class="button-basic-purple">
      <span class="front-purple">
        All Ages</span>
    </button>
    <button class="button-basic-orange">
      <span class="front-orange">
        Kindercafe
      </span>
    </button>
  </div>
</div>

<div class="category-box bottom-space big">
  <h2 class="header">Newest Playplaces</h2>
  <div class="category-cards bottom-space">
    <% @places.sample(3).each do |place| %>
      <div class="category-card card">
        <div class="img-box">
          <%= cl_image_tag place.photos[0].key, crop: :fill %>
        </div>
        <%# <img src="https://images.unsplash.com/photo-1596997000103-e597b3ca50df?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=80" alt="playground"> %>
        <div class="category-card-info">
          <%= link_to place.name.capitalize, place_path(place), class: "stretched-link" %>
          <p><%= place.address %></p>
        </div>
      </div>
    <% end %>
  </div>
  <p class="text-center"><%= link_to "View all playareas", places_path %><p>
</div>

<div class="secondary-category">
  <div class="mini-cards">
    <div class="mini-card">

    </div>
  </div>
</div>

<div class="btn cta cta-big">
  <div class="cta-basic w-100">
    <%= link_to "Become an Amigo!", new_user_registration_path, class: "cta-basic-front" %>
  </div>
</div>

<div class="perks">
  <%= render "shared/icon", id: Icon.library(:bubbles) %>
  <p>Meet families in your neighbourhood!</p>
  <p>Set up playdates and parties!</p>
  <p>Find fun playareas year round!</p>
</div>
