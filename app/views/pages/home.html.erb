<div class="logo-banner">
  <%= image_tag "staggered_logo" %>
  <div class="logo-tagline">
    <h2>A place to play wherever you go!</h2>
  </div>
</div>

<div class="search-box">
  <div class="search-input">
    <p class="input-text":>Find a place near you...</p>
  </div>
  <div class="search-icon">
    <i class="fa-solid fa-magnifying-glass"></i>
  </div>
</div>

<div class="category-box">
  <h1>Newest Playplaces</h1>
  <div class="category-cards">
    <div class="category-card">
      <% @places.sample(3).each do |place| %>
      <li><%= link_to place.name, place_path(place) %></li>
      <% end %>
    </div>
  </div>
</div>

<div class="categories">
  <h1>Browse categories:</h1>
  <div class="button-box">
    <button class="button-basic-blue">
      <span class="front-blue">
        big slides
      </span>
    </button>
    <button class="button-basic-yellow">
      <span class="front-yellow">
        1-5 years</span>
    </button>
    <button class="button-basic-purple">
      <span class="front-purple">
        6-10 years</span>
    </button>
    <button class="button-basic-orange">
      <span class="front-orange">
        popular
      </span>
    </button>
  </div>
  <p><%= link_to "View all playareas", places_path %><p>
</div>

<div class="btn cta cta-big">
  <div class="cta-basic">
    <%= link_to "Become an Amigo!", new_user_registration_path %>
  </div>
</div>

<div class="perks">
  <p>Meet families in your neighbourhood!</p>
  <p>Set up playdates and parties!</p>
  <p>Find fun playareas year round!</p>
</div>
