<div class="search-bar">
  <%= form_with url: search_path, method: :get, class: "d-flex bottom-space big", data: {search_target: "form"} do %>
  <%= text_field_tag :query,
    params[:query],
    class: "search-box",
    placeholder: "Search for places or events!",
    data: {
      search_target: "input",
      action: "keyup->search#update"}
  %>
  <%= submit_tag "Vamos!", class: "search-button" %>
  <% end %>
</div>
