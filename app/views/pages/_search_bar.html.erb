<%= form_with url: search_path, method: :get, class: "d-flex", data: {search_target: "form"} do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search for places or events!",
    data: {
      search_target: "input",
      action: "keyup->search#update"}
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
